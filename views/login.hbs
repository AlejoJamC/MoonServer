{{> head}}
<!-- BEGIN PAGE LEVEL STYLES -->
<link href="{{level}}css/login-5.min.css" rel="stylesheet" type="text/css" />
<!-- END PAGE LEVEL STYLES -->
<!-- BEGIN PAGE LEVEL PLUGINS -->
<link href="{{level}}plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
